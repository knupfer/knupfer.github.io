<span style="color: #00868b;">        </span>odds<span style="color: #404040;"> </span>=<span style="color: #404040;"> </span>funmod
<span style="color: #00868b;">        </span>odds[-funpcitems]<span style="color: #404040;"> </span>=<span style="color: #404040;"> </span>lapply(funmod[-funpcitems],<span style="color: #404040;"> </span>predict,<span style="color: #404040;"> </span>fundata,<span style="color: #404040;"> </span>type=<span style="color: #deb887;">"response"</span>)
<span style="color: #00868b;">        </span>odds[funpcitems]<span style="color: #404040;"> </span>=<span style="color: #404040;"> </span>lapply(funmod[funpcitems],<span style="color: #404040;"> </span>predict,<span style="color: #404040;"> </span>fundata,<span style="color: #404040;"> </span>type=<span style="color: #deb887;">"probs"</span>)
<span style="color: #00868b;">        </span>infotemp<span style="color: #404040;"> </span>=<span style="color: #404040;"> </span>odds

<span style="color: #00868b;">        </span>infotemp[funpcitems]<span style="color: #404040;"> </span>=<span style="color: #404040;"> </span>lapply(odds[funpcitems],<span style="color: #404040;"> </span>FUN.infoMC.IND)
<span style="color: #00868b;">        </span>infotemp[-funpcitems]<span style="color: #404040;"> </span>=<span style="color: #404040;"> </span>lapply(odds[-funpcitems],<span style="color: #404040;"> </span>FUN.info)
<span style="color: #00868b;">        </span>infotemp<span style="color: #404040;"> </span>=<span style="color: #404040;"> </span>simplify2array(infotemp)
<span style="color: #00868b;">    </span>}
<span style="color: #00868b;">    </span><span style="color: #00bfff;">return</span>(infotemp)
}






