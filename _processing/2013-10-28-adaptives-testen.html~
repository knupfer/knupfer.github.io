<span style="color: #7f7f7f;">#</span><span style="color: #404040;">                    </span><span style="color: #7f7f7f;">if</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">(length(pcitems2)</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">==</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">1)</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">{</span>
<span style="color: #7f7f7f;">#</span><span style="color: #404040;">                        </span><span style="color: #7f7f7f;">odds</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">=</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">lapply(fit2,</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">predict,</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">tempdata,</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">type="response")</span>
<span style="color: #7f7f7f;">#</span><span style="color: #404040;">                        </span><span style="color: #7f7f7f;">infotemp</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">=</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">odds</span>
<span style="color: #7f7f7f;">#</span><span style="color: #404040;">                        </span><span style="color: #7f7f7f;">infotemp</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">=</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">lapply(odds,</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">FUN.info)</span>
<span style="color: #7f7f7f;">#</span><span style="color: #404040;">                        </span><span style="color: #7f7f7f;">infotemp</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">=</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">simplify2array(infotemp)</span>
<span style="color: #7f7f7f;">#</span><span style="color: #404040;">                    </span><span style="color: #7f7f7f;">}</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">else</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">{</span>
<span style="color: #7f7f7f;">#</span><span style="color: #404040;">                        </span><span style="color: #7f7f7f;">pcitems2</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">=</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">pcitems2[2:length(pcitems2)]</span>
<span style="color: #7f7f7f;">#</span><span style="color: #404040;">                        </span><span style="color: #7f7f7f;">odds[-pcitems2]</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">=</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">lapply(fit2[-pcitems2],</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">predict,</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">tempdata,</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">type="response")</span>
<span style="color: #7f7f7f;">#</span><span style="color: #404040;">                        </span><span style="color: #7f7f7f;">odds[pcitems2]</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">=</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">lapply(fit2[pcitems2],</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">predict,</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">tempdata,</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">type="probs")</span>
<span style="color: #7f7f7f;">#</span><span style="color: #404040;">                        </span><span style="color: #7f7f7f;">infotemp</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">=</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">odds</span>
<span style="color: #7f7f7f;">#</span><span style="color: #8b2252;">                        </span>
<span style="color: #7f7f7f;">#</span><span style="color: #404040;">                        </span><span style="color: #7f7f7f;">##</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">Funktion</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">kann</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">nicht</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">benutzt</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">werden,</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">da</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">sie</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">auf</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">nicht</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">manipulierte</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">pcitems</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">zugreift</span>
<span style="color: #7f7f7f;">#</span><span style="color: #404040;">                        </span><span style="color: #7f7f7f;">infotemp[pcitems2]</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">=</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">lapply(odds[pcitems2],</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">FUN.infoMC.IND)</span>
<span style="color: #7f7f7f;">#</span><span style="color: #404040;">                        </span><span style="color: #7f7f7f;">infotemp[-pcitems2]</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">=</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">lapply(odds[-pcitems2],</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">FUN.info)</span>
<span style="color: #7f7f7f;">#</span><span style="color: #404040;">                        </span><span style="color: #7f7f7f;">infotemp</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">=</span><span style="color: #404040;"> </span><span style="color: #7f7f7f;">simplify2array(infotemp)</span>
<span style="color: #7f7f7f;">#</span><span style="color: #404040;">                    </span><span style="color: #7f7f7f;">}</span>
<span style="color: #00868b;">                    </span>infotemp<span style="color: #404040;"> </span>=<span style="color: #404040;"> </span>FUN.EntroMC(pcitems2,tempdata,<span style="color: #404040;"> </span>fit2)
<span style="color: #00868b;">                    </span>resttemp2[j]<span style="color: #404040;"> </span>=<span style="color: #404040;"> </span>sum(infotemp)
<span style="color: #00868b;">                </span>}<span style="color: #404040;"> </span><span style="color: #00bfff;">else</span><span style="color: #404040;"> </span>{
